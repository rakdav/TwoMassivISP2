<Window x:Class="TwoMassiv.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TwoMassiv"
        mc:Ignorable="d"
        Title="Двумерный массив" Height="450" Width="800" Background="#00da00">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.2*"/>
            <RowDefinition Height="0.3*"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="10 10 10 10" HorizontalAlignment="Center">
            <TextBox x:Name="NRow" Width="100" Margin="10 0 10 0" />
            <TextBox x:Name="NCol" Width="100" Margin="10 0 10 0"/>
            <Button Content="Сгенерировать"/>
        </StackPanel>
        <StackPanel Grid.Row="1" Margin="10 10 10 10" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button Content="avg" Width="100" Height="50" />
        </StackPanel>
        <TextBlock Grid.Row="2" x:Name="Result" Margin="10 10 10 10" Background="White"/>
    </Grid>
</Window>
